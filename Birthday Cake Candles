#include<stdio.h>

int main()
{
    long int arr[1000000];
    int i,aa =0 ,flag=0,a;
    scanf("%d",&a);
    for (i=0; i<a; i++) {
        scanf("%ld",&arr[i]);
      
    }

    aa = arr[0];

     for (i=0; i<a; i++) {
        
        if(aa < arr[i])
        aa = arr[i];
    }
  
   for (i=0; i<a; i++) {
    if(aa == arr[i])
    flag++;
    }
printf("%d",flag);
return 0;
}
